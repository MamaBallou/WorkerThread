<Window x:Class="WorkerThread.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkerThread"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ProgressBar x:Name="ProgressBar1" Margin="0,0,0,50" Height="25" Width="150"/>
        <Button x:Name="BtStart" Content="Start" Click="BtStart_Click" HorizontalAlignment="Center" Margin="0,50,75,0" VerticalAlignment="Center"/>
        <Button x:Name="BtStop" Content="Stop" Click="BtStop_Click" HorizontalAlignment="Center" Margin="75,50,0,0" VerticalAlignment="Center"/>

    </Grid>
</Window>
